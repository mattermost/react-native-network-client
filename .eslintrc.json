{
  "extends": [
    "plugin:mattermost/react",
    "prettier",
    "plugin:prettier/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": ["mattermost", "@typescript-eslint"],
  "settings": {
    "react": {
      "pragma": "React",
      "version": "17.0"
    }
  },
  "env": {
    "jest": true
  },
  "globals": {
    "__DEV__": true
  },
  "overrides": [
    {
      "files": ["*.test.js", "*.test.jsx"],
      "env": {
        "jest": true
      }
    }
  ],
  "rules": {
    "no-undef": 0,
    "no-shadow": 0,
    "no-use-before-define": "off",
    "@typescript-eslint/no-unused-vars": [
      2,
      {
        "vars": "all",
        "args": "after-used"
      }
    ]
  }
}
