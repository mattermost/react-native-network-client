{
  "name": "@mattermost/react-native-network-client",
  "version": "0.1.0",
  "description": "Configurable network clients for React Native. Uses Alamofire for iOS and OkHttp3 for Android.",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "react-native-network-client.podspec",
    "!lib/typescript/example",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!example",
    "!.vscode",
    "!**/.idea",
    "!**/.gradle",
    "!android/build",
    "!ios/Build",
    "!.circleci"
  ],
  "scripts": {
    "test": "jest",
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepare": "bob build",
    "release": "release-it",
    "example": "cd example && npm",
    "pods": "cd example && pod-install --quiet",
    "bootstrap": "npm run example i && npm run pods"
  },
  "keywords": [
    "react-native",
    "ios",
    "android",
    "network"
  ],
  "repository": "https://github.com/mattermost/react-native-network-client",
  "author": "Miguel Alatzar <this.migbot@gmail.com> (https://github.com/migbot)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mattermost/react-native-network-client/issues"
  },
  "homepage": "https://github.com/mattermost/react-native-network-client#readme",
  "devDependencies": {
    "@babel/runtime": "7.12.5",
    "@commitlint/config-conventional": "11.0.0",
    "@react-native-community/eslint-config": "2.0.0",
    "@release-it/conventional-changelog": "2.0.0",
    "@types/jest": "26.0.15",
    "@types/react": "16.9.55",
    "@types/react-native": "0.63.43",
    "@types/validator": "13.1.0",
    "commitlint": "11.0.0",
    "eslint": "7.12.1",
    "eslint-config-prettier": "6.15.0",
    "eslint-plugin-header": "3.1.0",
    "eslint-plugin-mattermost": "github:mattermost/eslint-plugin-mattermost#070ce792d105482ffb2b27cfc0b7e78b3d20acee",
    "eslint-plugin-prettier": "3.3.1",
    "husky": "4.3.0",
    "jest": "26.6.1",
    "pod-install": "0.1.12",
    "react": "16.13.1",
    "react-native": "0.63.3",
    "react-native-builder-bob": "0.18.1",
    "release-it": "14.2.1",
    "typescript": "3.8.3"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run lint && npm run typescript"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "dependencies": {
    "validator": "13.1.17",
    "zod": "1.11.13"
  }
}
